{
    "productName": "NEStor",
    "version": "0.1.0",
    "identifier": "com.tauri.dev",
    "build": {
        "beforeDevCommand": "cd nestor-browser/ && trunk serve",
        "devUrl": "http://localhost:8080",
        "beforeBuildCommand": "cd nestor-browser/ && trunk build",
        "frontendDist": "../nestor-browser/dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "width": 768,
                "height": 720,
                "title": "NEStor - NES Emulator"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
